<html lang="pt-br" dir="ltr">
    
    <head>
        <meta charset="utf-8">
        <title>Battleship</title>
        <link rel="icon" href="assets/bomb.ico">
        <script type="text/javascript" src="assets/battleship.js"></script>
    </head>
    <body>
        <header>
             <figure>
                <img class="logotipo" src="assets/logotipo.png" alt="Logotipo"></img>
            </figure>
            <h1>ENTRAR</h1>
        </header>
       
        <main>
           
            <%= form_tag sessions_path do |form| %>
            <p id="notice"><%= notice %></p> 
            <div class=”field”>
                <%= label_tag :Email %>
                <%= text_field_tag :email %>
            </div>

            <div class=”field”>
                <%= label_tag :Senha %>
                <%= password_field_tag :password %>
            </div>

            <div class='actions'>
               <%= submit_tag 'Login' %>
            </div>
            <br>
            <a href='/signup' id="aRegister">CADASTRAR?</a>
            
            <% end %>
       </main>
           
        
    </body>
    
</html>

