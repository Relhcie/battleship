<p id='alert'><%= alert %></p>
<html lang="pt-br" dir="ltr">
  <head>
        <meta charset="utf-8">
        <title>Battleship</title>
        <link rel="icon" href="assets/bomb.ico">
        <script type="text/javascript" src="assets/battleship.js"></script>
  </head>
  <body>
      <header>
        <figure>
          <img class="logotipo" src="assets/logotipo.png" alt="Logotipo"></img>
        </figure>
         <h1>ENTRAR</h1>
      </header>
       
      <main class= 'main-containers'> 

          
          <div class= 'main-containers-div'>  
          <p id="notice"><%= notice %></p> 
            <%= form_tag sessions_path do |form| %>
              <div class='field'>
                <%= label_tag :Email %><br>
                <%= text_field_tag :email %>
              </div>
            
              <div class='field'>
                <%= label_tag :Senha %><br>
                <%= password_field_tag :password %>
              </div>
            
              <div class='action'>
                <%= submit_tag 'Login' %>
              </div>
              <a id= 'link_to_cadastro' href='/signup' id='aRegister'>CADASTRAR?</a>
            <% end %>
            </div> 
      </main>
  </body>


